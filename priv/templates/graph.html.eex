<!DOCTYPE html>
<head>
  <meta charset="utf-8">
  <script src="http://d3js.org/d3.v3.min.js" charset="utf-8"></script>
  <style>
    html{
        height: 100%;
    }
    body {
        position: absolute;
        top: 0;
        bottom: 0;
        right: 0;
        left: 0;
        margin: 5px;
    }

    #fault-tree {
        display: inline-block;
        position: relative;
        width: 100%;
        padding-bottom: 100%;
        vertical-align: top;
        overflow: hidden;
    }

    .fault-tree-content {
        display: inline-block;
        position: absolute;
        top: 0;
        left: 0;
    }

    .node {
        cursor: pointer;
    }
    .node text {
        font: 10px sans-serif;
        font-weight: bold;
    }
    .node text.atleast {
        font: 8px sans-serif;
        font-weight: bold;
    }
    .node-link {
        fill: none;
        stroke: #ccc;
        stroke-width: 1.5px;
    }
    div.node-tooltip {
        position: absolute;
        text-align: center;
        width: 120px;
        padding: 2px;
        font: 12px sans-serif;
        background: lightsteelblue;
        border: 0px;
        border-radius: 8px;
        pointer-events: none;
    }
  </style>
</head>
<body>
  <div id="fault-tree"></div>
</body>
<script>
  // global tree data
  window.data = <%= @tree %>;
</script>
<script src="/js/graph.js"></script>
